{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "/opt/venv/bin/python -m uvicorn src.main:app --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "cron": [
    {
      "name": "mcp-sync-daily",
      "schedule": "0 2 * * *",
      "command": "curl -X POST http://localhost:$PORT/api/mcp/sync-all",
      "enabled": true
    }
  ]
}