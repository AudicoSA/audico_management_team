# ==============================================
# Audico AI System - Environment Variables
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ==============================================
# LLM Providers
# ==============================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==============================================
# Gmail API (support@audicoonline.co.za)
# ==============================================
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token

# ==============================================
# OpenCart 3.8 (audicoonline.co.za)
# ==============================================
OPENCART_BASE_URL=https://audicoonline.co.za
OPENCART_API_KEY=your_opencart_api_key
OPENCART_API_USERNAME=your_opencart_username
OPENCART_API_TOKEN=your_opencart_token

# Database (direct SQL access - optional, fallback)
OPENCART_DB_HOST=your_db_host
OPENCART_DB_PORT=3306
OPENCART_DB_NAME=your_db_name
OPENCART_DB_USER=your_db_user
OPENCART_DB_PASSWORD=your_db_password

# ==============================================
# Supabase (Operational Database)
# ==============================================
SUPABASE_URL=https://ajdehycoypilsegmxbto.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_ANON_KEY=your_supabase_anon_key

# ==============================================
# Shiplogic API
# ==============================================
SHIPLOGIC_API_KEY=your_shiplogic_api_key
SHIPLOGIC_BASE_URL=https://api.shiplogic.com/v2

# ==============================================
# Optional Services
# ==============================================
# Redis (for rate limiting - optional)
REDIS_URL=redis://localhost:6379

# ElevenLabs (for voice - optional)
ELEVENLABS_API_KEY=your_elevenlabs_key

# Twilio (for SMS - optional)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token

# ==============================================
# Application Settings
# ==============================================
LOG_LEVEL=INFO
EMAIL_POLL_INTERVAL=60
ENVIRONMENT=development
